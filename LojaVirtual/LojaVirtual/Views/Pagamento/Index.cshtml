                <artigo classe="cartão">
                    <div class="card-body p-5">

                        <ul class="nav bg radius nav-pills nav-fill mb-3" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#nav-tab-card">
                                    <i class="fa fa-credit-card"> </i> Cartão de crédito
