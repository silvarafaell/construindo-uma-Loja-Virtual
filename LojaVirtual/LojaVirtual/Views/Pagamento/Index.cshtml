                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#nav-tab-bank">
                                    <i class="fa fa-university"> </i> Transferência Bancária
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade" id="nav-tab-card">
                                <p class="alert alert-success"> Sucesso ou erro no texto </p>
                                <form role="form">
