@model Cliente
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "CadastroCliente";
}
    <form asp-action="CadastroCliente" asp-controller="Home" method="post">
        <main role="main">

            <section class="container" style="margin-top: 50px">
                <div class="row">
                    <aside class="col-sm-6">
                        <h3 class="subtitle-doc">
                            Cadastro de Cliente

                        </h3>
                        <div id="code_register_1">
                            <div class="card">
                                <header class="card-header">
                                    <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                    <h4 class="card-title mt-2">Cadastro</h4>
                                </header>
                                <article class="card-body">

                                    <div class="form-row">
                                        <div class="col form-group">
                                            <label asp-for="Nome">Nome</label>
                                            <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        </div>
                                        <div class="col form-group">
                                            <label asp-for="Nascimento">Nascimento</label>
                                            <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender" value="option1">
                                            <span class="form-check-label"> Masculino</span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender" value="option2">
                                            <span class="form-check-label"> Feminino</span>
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="Telefone">Telefone</label>
                                            <input type="text" asp-for="Telefone" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email">E-mail</label>
                                            <input type="text" asp-for="Email" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Senha">Senha</label>
                                        <input class="form-control" asp-for="Senha" type="password">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                    </div>

                                </article>
                                <div class="border-top card-body text-center">Tem uma conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                            </div>

                        </div>
                    </aside>
                </div>
            </section>
        </main>
    </form>
